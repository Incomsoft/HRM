	РасчетБольничного.ДневноеПособиеСумма = Окр(РасчетБольничного.РасчетнаяСумма/РасчетБольничного.ДниЗаДваГода*РасчетБольничного.ПроцентОплаты/100,2);	
	//
	РасчетБольничного.ПособиеЗаСчетРаботодателяСумма 	= РасчетБольничного.ДневноеПособиеСумма * РасчетБольничного.ДниЗаСчетРаботодателя;
	//РасчетБольничного.ПособиеЗаСчетФСССумма				= РасчетБольничного.ДневноеПособиеСумма * РасчетБольничного.ДниБольничного 
	//                                                    - РасчетБольничного.ПособиеЗаСчетРаботодателяСумма;	
	РасчетБольничного.ИтогоНачисленоСумма				= РасчетБольничного.ПособиеЗаСчетРаботодателяСумма + РасчетБольничного.ПособиеЗаСчетФСССумма; 
	//
	
	// Расчет исходя из МРОТ:
	РасчетБольничного.Вставить("МРОТ",0);                     
	РасчетБольничного.Вставить("МРОТКоличествоДнейВМесяце",0);                     
	РасчетБольничного.Вставить("МРОТДневноеПособиеСумма",0);
	РасчетБольничного.Вставить("МРОТРайонныйКоэффициент",0);
	РасчетБольничного.Вставить("МРОТСевернаяНадбавка",0);
	РасчетБольничного.Вставить("МРОТПособиеЗаСчетРаботодателяСумма",0);
	РасчетБольничного.Вставить("МРОТПособиеЗаСчетФСССумма",0);
	РасчетБольничного.Вставить("МРОТИндивидуальныйКоэффициент",0); 
	//
	РасчетБольничного.Вставить("МРОТИтогоНачисленоСумма",0);
	Если Объект.РасчетМрот Тогда
		
		КадровыеДанныеСотрудника = инкКадровыйУчетСервер.ПолучитьКадровыеДанныеСотрудникаВСтруктуру(Объект.Сотрудник,КонецМесяца(Объект.МесяцНачисления));
		
		СтандартныеВычетыНастройки = инкОбщийСервер.СтандартныеВычетыНастройки(Объект.МесяцНачисления);
		РасчетБольничного.МРОТ = СтандартныеВычетыНастройки.МРОТ; 	
		РасчетБольничного.МРОТКоличествоДнейВМесяце = День(КонецМесяца(Объект.МесяцНачисления));                     
		РасчетБольничного.МРОТРайонныйКоэффициент = КадровыеДанныеСотрудника.РайонныйКоэффициент;
		РасчетБольничного.МРОТСевернаяНадбавка = КадровыеДанныеСотрудника.СевернаяНадбавка;
		РасчетБольничного.МРОТИндивидуальныйКоэффициент = КадровыеДанныеСотрудника.ИндивидуальныйКоэффициент;
		
		Если РасчетБольничного.МРОТКоличествоДнейВМесяце <> 0 Тогда 
			Если РасчетБольничного.МРОТКоличествоДнейВМесяце = 31 Тогда
				РасчетБольничного.МРОТДневноеПособиеСумма = (РасчетБольничного.МРОТ + РасчетБольничного.МРОТ*РасчетБольничного.МРОТРайонныйКоэффициент)*24*РасчетБольничного.МРОТИндивидуальныйКоэффициент/РасчетБольничного.ДниЗаДваГода*(Объект.ПроцентОплаты/100);				
			Иначе   
				РасчетБольничного.МРОТДневноеПособиеСумма = (РасчетБольничного.МРОТ + РасчетБольничного.МРОТ*РасчетБольничного.МРОТРайонныйКоэффициент)*РасчетБольничного.МРОТИндивидуальныйКоэффициент/РасчетБольничного.МРОТКоличествоДнейВМесяце;				
			КонецЕсли;
		КонецЕсли;
		
		РасчетБольничного.МРОТДневноеПособиеСумма = Окр(РасчетБольничного.МРОТДневноеПособиеСумма,2);
		РасчетБольничного.МРОТПособиеЗаСчетРаботодателяСумма = РасчетБольничного.МРОТДневноеПособиеСумма 
		                                                     * РасчетБольничного.ДниЗаСчетРаботодателя;
		
		РасчетБольничного.МРОТИтогоНачисленоСумма = РасчетБольничного.МРОТПособиеЗаСчетРаботодателяСумма
		                                          + РасчетБольничного.МРОТПособиеЗаСчетФСССумма;
		
	КонецЕсли;
	
	Возврат РасчетБольничного;
	
